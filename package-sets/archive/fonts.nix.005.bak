# font package set
# edited by phossil
# 2022-09-21

{ config, pkgs, ... }:

{
  # set font in tty
  console = {
    # fonts in the tty ???
    packages = [ pkgs.tamsyn ];
    font = "Tamsyn10x20b";
  };

  # extra fonts
  fonts.fonts = with pkgs; [
    # largest collection
    noto-fonts
    # chinese, japanese, and korean
    noto-fonts-cjk
    # emojis, anta baka
    noto-fonts-emoji
    # no idea what's in this one but ok
    noto-fonts-extra
    # favourite terminal font atm <3
    mononoki
    # what, it looks nice
    go-font
    # make that code look good
    source-code-pro
    # source code pro but with ligatures
    hasklig
    # random symbols and some logos
    font-awesome_5
    # japanese
    ipafont
    # essential Macrohard fonts like Times New Roman
    corefonts
    # yes
    xkcd-font
    # go outside and touch the grass :^)
    national-park-typeface
    # more monospace fonts
    monoid
    iosevka
    ocr-a
    proggyfonts
    fantasque-sans-mono
    jetbrains-mono
    fixedsys-excelsior
    tamsyn
    # more cjk fonts
    wqy_microhei
  ];
}
