# font package set
# edited by phossil
# 2022-06-12
# Dell Latitude 3350

{ config, pkgs, ... }:

{
  # set font in tty
  console = {
    #font = "Lat2-Terminus16";
    font = "cybercafe";
    #keyMap = "us";
  };

  # extra fonts
  fonts.fonts = with pkgs; [
    # largest collection
    noto-fonts
    # chinese, japanese, and korean
    noto-fonts-cjk
    # emojis, anta baka
    noto-fonts-emoji
    # no idea what's in this one but ok
    noto-fonts-extra
    # make that code look good
    source-code-pro
    # random symbols and some logos
    font-awesome_5
    # japanese
    ipafont
    # essential Macrohard fonts like Times New Roman
    corefonts
    # yes
    xkcd-font
    # go outside and touch the grass :^)
    national-park-typeface
    # what, it looks nice
    go-font
    # more monospace fonts
    mononoki
    monoid
    iosevka
  ];
}
